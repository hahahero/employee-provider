<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mysql.demo.dao.SalariesDao">

    <resultMap type="com.mysql.demo.entity.Salaries" id="SalariesMap">
        <result property="empNo" column="emp_no" jdbcType="INTEGER"/>
        <result property="salary" column="salary" jdbcType="INTEGER"/>
        <result property="fromDate" column="from_date" jdbcType="OTHER"/>
        <result property="toDate" column="to_date" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SalariesMap">
        select
          emp_no, salary, from_date, to_date
        from employees.salaries
        where emp_no = #{empNo}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SalariesMap">
        select
          emp_no, salary, from_date, to_date
        from employees.salaries
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SalariesMap">
        select
          emp_no, salary, from_date, to_date
        from employees.salaries
        <where>
            <if test="empNo != null">
                and emp_no = #{empNo}
            </if>
            <if test="salary != null">
                and salary = #{salary}
            </if>
            <if test="fromDate != null">
                and from_date = #{fromDate}
            </if>
            <if test="toDate != null">
                and to_date = #{toDate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="empNo" useGeneratedKeys="true">
        insert into employees.salaries(salary, to_date)
        values (#{salary}, #{toDate})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update employees.salaries
        <set>
            <if test="salary != null">
                salary = #{salary},
            </if>
            <if test="toDate != null">
                to_date = #{toDate},
            </if>
        </set>
        where emp_no = #{empNo}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from employees.salaries where emp_no = #{empNo}
    </delete>

</mapper>